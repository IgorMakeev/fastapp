pipeline {
    agent any

    stages {
        stage(" execute Ansible") {
            steps {
                ansiblePlaybook credentialsId: 'ansible-ssh-web', disableHostKeyChecking: true, installation: 'Ansible', playbook: 'deployment/ansible/deploy.yaml'
            }
        }
        stage('Build') {
            steps {
                sh './deployment/scripts/build.sh'
            }
        }
        stage('Push') {
            steps {
                sh './deployment/scripts/push.sh'
            }
        }
    }
}

